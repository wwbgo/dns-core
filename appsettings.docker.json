{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "DnsCore": "Debug"
    }
  },
  "AllowedHosts": "*",
  "DnsServer": {
    "Port": 53,
    "UpstreamDnsServers": [
      "8.8.8.8",
      "1.1.1.1"
    ],
    "CustomRecords": [
      {
        "Domain": "test.local",
        "Type": "A",
        "Value": "192.168.1.100",
        "TTL": 3600
      },
      {
        "Domain": "*.dev.local",
        "Type": "A",
        "Value": "10.0.0.1",
        "TTL": 300
      }
    ]
  }
}
